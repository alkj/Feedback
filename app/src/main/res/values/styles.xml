<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMørkegrå</item>
        <item name="colorPrimaryDark">@color/colorSort</item>
        <item name="colorAccent">@color/colorGrøn</item>
    </style>

    <style name="DialogThemeGray" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorMørkegrå</item>
    </style>

    <style name="DialogThemeGreen" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorGrøn</item>
    </style>

    <!-- Knap temaer. -->
    <style name="knapGrøn" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/knap_groen</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorHvid</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- EditText temaer. -->
    <style name="inputHvid" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/colorHvid</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorSort</item>
    </style>

    <!-- Text temeaer. -->
    <style name="overskrift" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
