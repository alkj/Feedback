<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMørkegrå"
    android:orientation="vertical"
    android:paddingBottom="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/knap_megetlysegraa"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/list_moednavn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:fontFamily="@font/open_sans_semibold"
            android:textAppearance="@style/Tekst"
            android:text="Navn"
            android:textAlignment="center"
            android:textColor="@color/colorMørkegrå"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_moedeID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textAppearance="@style/Tekst"
            android:text="MødeID"
            android:textAlignment="center"
            android:textColor="@color/colorMørkegrå"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/list_moededato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textAppearance="@style/Tekst"
            android:text="Dato"
            android:textAlignment="center"
            android:textColor="@color/colorMørkegrå"
            android:textSize="10sp" />
    </LinearLayout>

    <com.example.admin.feedback_app.views.HorizontalStackedBarChart
        android:id="@+id/list_chart"
        android:layout_width="match_parent"
        android:layout_height="7dp" />

</LinearLayout>